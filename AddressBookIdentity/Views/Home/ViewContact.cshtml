@{
    Layout = "_Layout";
    ViewData["Title"] = Model.name;

}
@model AddressBookIdentity.Models.Contact
<div class="container ">
    <div id="test">@ViewBag.Country</div>
    
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button class="btn btn-outline-secondary" disabled type="button">Search</button>
            </div>
            <input type="search" value="" id="sinput" class="form-control">
        </div>
    
    <div class="row">

        <div id="ContactListContainerAtAddContact" class="shadow p-3 mb-5 bg-white rounded border text-center overflow-auto col-md-6" style="width: 350px; height: 500px;">



            @await Component.InvokeAsync("ContactList")



        </div>
        <div class="col-md-6">
            <h1 class="display-4 text-center">@Model.name @Model.lastName</h1>
            <div class="container" style="margin: 25px;">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Phone</h5>
                        <h5>Email</h5>
                        <h5>Address</h5>

                    </div>
                    <div class="col-md-6">
                        <h5>@Model.phone</h5>
                        <h5>@Model.Email</h5>
                        <h5>@Model.Address</h5>
                    </div>
                </div>
                <div class="container" style="margin-top: 50px; color: white;">
                    <div class="row">
                        <script>
                                function ConfirmDeletion() {
                                    var bool = confirm("Delete Contact ?");
                                    if (bool) {
                                        var id = @Model.id;
                                        window.location.href = '@Url.Action("Delete", "Home")/' + id;
                                    }
                                }
                        </script>

                        <div class="col-md-6"><a id="EditButton" onclick="ConfirmEditing()" class="btn btn-warning" style="width: 200px; cursor: default" asp-action="EditContact" asp-controller="Home" asp-route-id="@Model.id">Edit</a></div>
                        <div class="col-md-6"><a id="DeleteButton" onclick="ConfirmDeletion()" class="btn btn-danger" style="width: 200px;" role="button">Delete</a></div>

                    </div>

                </div>

            </div>

        </div>

    </div>
</div>

