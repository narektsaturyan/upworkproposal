@{
    Layout = "_Layout";
    ViewData["Title"] = "AddressBook";

}
@model AddressBookIdentity.Models.Contact
<div class="container ">
    <div id="test">@ViewBag.Country</div>
    
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button class="btn btn-outline-secondary" disabled type="button">Search</button>
            </div>
            <input type="search" value="" id="sinput" class="form-control">
        </div>
    
    <div class="row">

        <div id="ContactListContainerAtAddContact" class="shadow p-3 mb-5 bg-white rounded border text-center overflow-auto col-md-6" style="width: 350px; height: 500px;">


            @await Component.InvokeAsync("ContactList")



        </div>
        <div class="col-md-6">
            <form asp-action="EditContact" asp-controller="Home" asp-route-id="@Model.id">
                <div class="form-group">
                    <label asp-for="Email">Email address</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Enter email" value="@Model.Email">

                </div>
                <div class="form-group">
                    <label asp-for="name">Name</label>
                    <input type="text" asp-for="name" class="form-control" placeholder="Name" value="@Model.name">

                </div>
                <div class="form-group">
                    <label asp-for="lastName">Last Name</label>
                    <input type="text" asp-for="lastName" class="form-control" placeholder="Last Name" value="@Model.lastName">

                </div>
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input type="text" asp-for="Address" class="form-control" placeholder="Address" value="@Model.Address">

                </div>
                <div class="form-group">
                    <label asp-for="phone">Phone</label>
                    <input type="text" asp-for="phone" class="form-control" placeholder="Phone Number" value="@Model.phone">

                </div>

                <button type="submit" class="btn btn-warning">Save</button>
            </form>

        </div>

    </div>




</div>