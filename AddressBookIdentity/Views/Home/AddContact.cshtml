@{
    Layout = "_Layout";
    ViewData["Title"] = "AddressBook";

}
@model AddressBookIdentity.ViewModels.AddContactViewModel


<div class="container">
    
    
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <button class="btn btn-outline-secondary" disabled type="button">Search</button>
            </div>
            <input type="text" value="" id="sinput" class="form-control" >
        </div>
    
    <div class="row">
        <div id="ContactListContainerAtAddContact" class="shadow p-3 mb-5 bg-white rounded border text-center overflow-auto col-md-6" style="width: 350px; height: 500px;">

            @await Component.InvokeAsync("ContactList")

        </div>

        <div class="col-md-6">
            <form asp-action="AddContact" asp-controller="Home">
                <div class="form-group">
                    <label asp-for="@Model.contact.Email">Email address*</label>
                    <input type="email" asp-for="@Model.contact.Email" class="form-control" placeholder="Enter email">

                </div>
                <div class="form-group">
                    <label asp-for="@Model.contact.name">Name*</label>
                    <input type="text" asp-for="@Model.contact.name" class="form-control" placeholder="Name">

                </div>
                <div class="form-group">
                    <label asp-for="@Model.contact.lastName">Last Name*</label>
                    <input type="text" asp-for="@Model.contact.lastName" class="form-control" placeholder="Last Name">

                </div>
                <div class="form-group">
                    <label asp-for="@Model.contact.Address">Address</label>
                    <input type="text" asp-for="@Model.contact.Address" class="form-control" placeholder="Address">

                </div>
                <div class="form-group">
                    <label asp-for="@Model.contact.phone">Phone*</label>
                    <input type="text" asp-for="@Model.contact.phone" class="form-control" placeholder="Phone Number">

                </div>


                <button type="submit" class="btn btn-primary">Add Contact</button>
            </form>

        </div>

    </div>

</div>

    
